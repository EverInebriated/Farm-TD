		override public function update():void
		{
			//enable collision between the map and the enemies
			//FlxG.collide(level, start);
			FlxG.collide(level, enemyGroup);
			
			//oh my god I can't believe this does this in just one line of code
			//find the path between the start and the goal
			var path:FlxPath = level.findPath(new FlxPoint(start.x + start.width / 2, start.y + start.height / 2), new FlxPoint(goal.x + goal.width / 2, goal.y + goal.height / 2));
			
			//start enemies with space
			if (FlxG.keys.SPACE)
			{
				//pass the path var to each enemy in the group
				for (var i:int = 0; i < 10; i++)
				{
					enemyGroup.members[i].followPath(path);
				}
			}
			
			for (var j:int = 0; j < 10; j++)
			{
				//check if any of the enemies have reached the goal, and if so -1 life and kill the enemy
				if (FlxG.overlap(goal, enemyGroup.members[i]))
				{
					life -= 1;
					lifeStatus.text = "Life Left: " + life;
					enemyGroup.members[j].kill();
				}
			}
			
			super.update();
			
